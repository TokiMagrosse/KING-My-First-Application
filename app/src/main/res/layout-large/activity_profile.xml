<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_background"
    tools:context=".inside_of_king.ProfileActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="450sp"
            android:layout_height="550sp"
            android:layout_marginEnd="25sp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/fucking_green"
            app:cardCornerRadius="20sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="40dp">

            <LinearLayout
                android:layout_width="370sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.058"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    app:strokeColor="@color/white"
                    app:cardCornerRadius="20sp"
                    android:layout_marginBottom="50sp"
                    app:strokeWidth="5sp">

                    <ImageView
                        android:id="@+id/your_profile_picture"
                        android:layout_width="160sp"
                        android:layout_height="160sp"
                        android:layout_gravity="center"
                        android:background="@drawable/default_profile_outlines"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/default_profile_picture"/>

                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:textSize="23sp"
                        android:fontFamily="@font/alata"
                        android:text="@string/your_rating"
                        android:textColor="@color/white" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="23sp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/alata"
                        android:text="@string/_200"
                        android:textColor="@color/white" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15sp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:textSize="23sp"
                        android:fontFamily="@font/alata"
                        android:text="@string/your_rank"
                        android:textColor="@color/white" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/rank"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:textSize="23sp"
                        android:fontFamily="@font/alata"
                        android:text="@string/your_title"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15sp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:textSize="23sp"
                        android:fontFamily="@font/alata"
                        android:text="@string/your_coins"
                        android:textColor="@color/white" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/alata"
                        android:text="2000"
                        android:textSize="23sp"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15sp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:textSize="23sp"
                        android:fontFamily="@font/alata"
                        android:text="@string/total_games"
                        android:textColor="@color/white" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/total_games"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/alata"
                        android:text="@string/_0"
                        android:textSize="23sp"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15sp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:textSize="23sp"
                        android:fontFamily="@font/alata"
                        android:text="@string/wins"
                        android:textColor="@color/white" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/wins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/alata"
                        android:text="@string/_0"
                        android:textSize="23sp"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15sp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:textSize="23sp"
                        android:fontFamily="@font/alata"
                        android:text="@string/loses"
                        android:textColor="@color/white" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/loses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/alata"
                        android:text="@string/_0"
                        android:textSize="23sp"
                        android:textColor="@color/white" />
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15sp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cardView3"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView4"
                android:layout_width="600sp"
                android:layout_height="450sp"
                android:backgroundTint="@color/fucking_green"
                app:cardCornerRadius="20sp"
                tools:layout_editor_absoluteX="315dp"
                tools:layout_editor_absoluteY="40dp">

                <LinearLayout
                    android:layout_width="525sp"
                    android:layout_height="400sp"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.509"
                    app:layout_constraintStart_toEndOf="@+id/cardView3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.294">


                    <TextView
                        android:id="@+id/my_profile_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/alata"
                        android:text="@string/my_profile"
                        android:textColor="@color/white"
                        android:textSize="50sp"
                        android:textStyle="bold" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/username_in_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="15sp"
                        android:fontFamily="@font/alata"
                        android:text="@string/your_username"
                        android:textColor="@color/white"
                        android:textSize="23sp"
                        app:drawableStartCompat="@drawable/baseline_account_circle"
                        app:drawableTint="@color/white" />

                    <TextView
                        android:id="@+id/email_in_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:drawablePadding="15sp"
                        android:fontFamily="@font/alata"
                        android:text="@string/email"
                        android:textColor="@color/white"
                        android:textSize="23sp"
                        app:drawableStartCompat="@drawable/email_icon"
                        app:drawableTint="@color/white" />

                    <TextView
                        android:id="@+id/id_in_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:drawablePadding="15sp"
                        android:fontFamily="@font/alata"
                        android:text="@string/id"
                        android:textColor="@color/white"
                        android:textSize="23sp"
                        app:drawableStartCompat="@drawable/identity_icon"
                        app:drawableTint="@color/white" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/change_profile_button"
                        android:layout_width="275sp"
                        android:layout_height="85sp"
                        android:layout_gravity="center_horizontal"
                        android:backgroundTint="@color/grey"
                        android:fontFamily="@font/alata"
                        android:text="@string/change_profile"
                        android:textSize="20sp"
                        android:textColor="@color/fucking_green"
                        android:textStyle="bold"
                        app:cornerRadius="20sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="315dp"
                tools:layout_editor_absoluteY="319dp">

                <Button
                    android:id="@+id/my_progress_button"
                    android:layout_width="275sp"
                    android:layout_height="85sp"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="@color/fucking_green"
                    android:fontFamily="@font/alata"
                    android:text="@string/save_changes"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:cornerRadius="20sp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/back_to_main_button"
                    android:layout_width="275sp"
                    android:layout_height="85sp"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="@color/fucking_green"
                    android:fontFamily="@font/alata"
                    android:text="@string/back_to_main"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    app:cornerRadius="20sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>