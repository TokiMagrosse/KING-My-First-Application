<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/created_mail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_background"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="3sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.065">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="715sp"
            android:layout_height="65sp"
            android:backgroundTint="@color/super_dark_green"
            android:orientation="horizontal"
            app:cardCornerRadius="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.017">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="7.25dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/your_profile_picture"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:background="@drawable/default_profile_outlines"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/default_profile_picture" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/your_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="67sp"
                android:layout_marginTop="5sp"
                android:fontFamily="@font/alata"
                android:gravity="start"
                android:text="@string/your_username"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/my_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="67sp"
                android:layout_marginTop="34sp"
                android:fontFamily="@font/alata"
                android:gravity="start"
                android:text="@string/_200"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="225sp"
                android:layout_height="50sp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="300sp"
                android:backgroundTint="@color/green_background"
                app:cardCornerRadius="50sp">

                <ImageView
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="4sp"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/gold_coin" />

                <TextView
                    android:id="@+id/gold_coins_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="2.5sp"
                    android:fontFamily="@font/alata"
                    android:text="1500"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/coins_getting_plus"
                    android:layout_width="33sp"
                    android:layout_height="40sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="182.5sp"
                    android:backgroundTint="@color/green_background"
                    android:drawableEnd="@drawable/plus_icon_normal"
                    android:drawablePadding="15sp"
                    android:padding="2.5sp"
                    app:cornerRadius="20sp"
                    app:strokeColor="@color/white"
                    app:strokeWidth="2.25sp" />

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/menu_button"
                android:layout_width="40sp"
                android:layout_height="44sp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="660sp"
                android:backgroundTint="@color/green_background"
                android:drawableEnd="@drawable/menu"
                android:drawablePadding="15dp"
                android:padding="5dp"
                app:cornerRadius="10dp" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="210sp"
                android:layout_height="250sp"
                android:layout_marginTop="20sp"
                android:backgroundTint="@color/super_dark_green"
                app:cardCornerRadius="15sp">

                <Button
                    android:id="@+id/play_button"
                    android:layout_width="175sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="180sp"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/alata"
                    android:text="@string/play_200"
                    android:textColor="@color/super_dark_green"
                    android:textStyle="bold"
                    app:cornerRadius="15sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="210sp"
                android:layout_height="250sp"
                android:layout_marginTop="20sp"
                android:backgroundTint="@color/super_dark_green"
                app:cardCornerRadius="15sp"
                android:layout_marginStart="30sp">

                <Button
                    android:id="@+id/play_button_2"
                    android:layout_width="175sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="180sp"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/alata"
                    android:text="@string/play_200"
                    android:textColor="@color/super_dark_green"
                    android:textStyle="bold"
                    app:cornerRadius="15sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="210sp"
                android:layout_height="250sp"
                android:layout_marginTop="20sp"
                android:backgroundTint="@color/super_dark_green"
                app:cardCornerRadius="15sp"
                android:layout_marginStart="30sp">

                <Button
                    android:id="@+id/log_out_button"
                    android:layout_width="175sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="180sp"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/alata"
                    android:text="LOG OUT"
                    android:textColor="@color/super_dark_green"
                    android:textStyle="bold"
                    app:cornerRadius="15sp" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    <!--<androidx.fragment.app.FragmentContainerView
        android:id="@+id/menu_fragment"
        android:name="com.example.poisonousking.MenuFragment"
