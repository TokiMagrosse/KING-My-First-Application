<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/super_dark_green"
    tools:context=".UserProfileAttributesActivity">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="275sp"
        android:layout_height="325sp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/grey_1"
        app:cardCornerRadius="10sp"
        app:cardElevation="20dp"
        android:layout_marginStart="45sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="275sp"
            android:layout_height="325sp"
            android:background="@color/grey_1"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.058"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8sp"
                app:cardElevation="10dp">

                <ImageView
                    android:id="@+id/your_profile_picture"
                    android:layout_width="125sp"
                    android:layout_height="125sp"
                    android:background="@drawable/default_profile_outlines"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/default_profile_picture" />

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="225sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="25sp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/alata"
                    android:text="@string/your_rating"
                    android:textColor="@color/white" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="25sp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25sp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/alata"
                    android:text="200"
                    android:textColor="@color/white" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="225sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="25sp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/alata"
                    android:text="@string/your_rank"
                    android:textColor="@color/white" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="25sp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25sp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/alata"
                    android:text="@string/seven_of_clubs"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="225sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="25sp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/alata"
                    android:text="@string/your_level"
                    android:textColor="@color/white" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="25sp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25sp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/alata"
                    android:text="C_1"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="225sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="25sp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/alata"
                    android:text="@string/your_coins"
                    android:textColor="@color/white" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="25sp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25sp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/alata"
                    android:text="0"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="225sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="25sp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/alata"
                    android:text="@string/total_wins"
                    android:textColor="@color/white" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="25sp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25sp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/alata"
                    android:text="0"
                    android:textColor="@color/white" />
            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <Button
        android:id="@+id/verify_email_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/affecting_red"
        android:text="@string/verify_your_email"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.955"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>