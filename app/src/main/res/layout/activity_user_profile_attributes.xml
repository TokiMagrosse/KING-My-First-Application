<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_background"
    tools:context=".UserProfileAttributesActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="275sp"
        android:layout_height="330sp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/fucking_green"
        app:cardCornerRadius="10sp"
        app:cardElevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.035"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.493">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="315sp"
            android:layout_gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.058"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="120sp"
                android:layout_height="120sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5sp"
                app:cardElevation="15dp"
                app:strokeColor="@color/blue_grey"
                app:strokeWidth="5sp">

                <ImageView
                    android:id="@+id/your_profile_picture"
                    android:layout_width="115sp"
                    android:layout_height="115sp"
                    android:layout_gravity="center"
                    android:background="@drawable/default_profile_outlines"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/default_profile_picture" />

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="225sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="25sp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/alata"
                    android:text="@string/your_rating"
                    android:textColor="@color/white" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="25sp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/rating"
                    android:layout_width="wrap_content"
                    android:layout_height="25sp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/alata"
                    android:text="200"
                    android:textColor="@color/white" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="225sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="25sp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/alata"
                    android:text="@string/your_rank"
                    android:textColor="@color/white" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="25sp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/rank"
                    android:layout_width="wrap_content"
                    android:layout_height="25sp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/alata"
                    android:text="@string/seven_of_clubs"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="225sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="25sp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/alata"
                    android:text="@string/your_level"
                    android:textColor="@color/white" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="25sp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/level"
                    android:layout_width="wrap_content"
                    android:layout_height="25sp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/alata"
                    android:text="C_1"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="225sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="25sp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/alata"
                    android:text="@string/your_coins"
                    android:textColor="@color/white" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="25sp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/coins"
                    android:layout_width="wrap_content"
                    android:layout_height="25sp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/alata"
                    android:text="0"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="225sp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10sp"
                    app:cardBackgroundColor="@color/red"
                    app:cardCornerRadius="2.5dp"> <!-- Half of the height to create a circular corner -->
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5sp"
                    android:fontFamily="@font/alata"
                    android:text="Percentage Scale"
                    android:textColor="@color/white" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="400sp"
        android:layout_height="275sp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/fucking_green"
        app:cardCornerRadius="10sp"
        app:cardElevation="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/cardView3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.294">

        <LinearLayout
            android:layout_width="350sp"
            android:layout_height="255sp"
            android:layout_gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toEndOf="@+id/cardView3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.294">

            <TextView
                android:id="@+id/my_profile_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:fontFamily="@font/alata"
                android:text="@string/my_profile"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/username_in_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:drawablePadding="5sp"
                android:fontFamily="@font/alata"
                android:text="Username"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:drawableStartCompat="@drawable/baseline_account_circle_26"
                app:drawableTint="@color/white" />

            <TextView
                android:id="@+id/email_in_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:drawablePadding="5sp"
                android:fontFamily="@font/alata"
                android:text="Email address"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:drawableStartCompat="@drawable/email_icon_2"
                app:drawableTint="@color/white" />

            <TextView
                android:id="@+id/password_in_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:drawablePadding="5sp"
                android:fontFamily="@font/alata"
                android:text="Password"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:drawableStartCompat="@drawable/password_logo_icon_2"
                app:drawableTint="@color/white" />

            <TextView
                android:id="@+id/country_in_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:drawablePadding="5sp"
                android:fontFamily="@font/alata"
                android:text="Country"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:drawableStartCompat="@drawable/country_icon_2"
                app:drawableTint="@color/white" />

            <Button
                android:id="@+id/change_profile_button"
                android:layout_width="180sp"
                android:layout_height="53sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10sp"
                android:backgroundTint="@color/grey"
                android:fontFamily="@font/alata"
                android:text="CHANGE PROFILE"
                android:textColor="@color/fucking_green"
                android:textStyle="bold"
                app:cornerRadius="10sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/back_to_main_button"
        android:layout_width="180sp"
        android:layout_height="53sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/fucking_green"
        android:fontFamily="@font/alata"
        android:text="BACK TO MAIN"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:cornerRadius="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView4"
        app:layout_constraintVertical_bias="0.069" />

    <Button
        android:id="@+id/my_progress_button"
        android:layout_width="180sp"
        android:layout_height="53sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/fucking_green"
        android:fontFamily="@font/alata"
        android:text="MY PROGRESS"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:cornerRadius="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/cardView3"
        app:layout_constraintTop_toBottomOf="@+id/cardView4"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
