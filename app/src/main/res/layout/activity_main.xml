<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_background"
    android:orientation="vertical"
    tools:context=".MainActivity">
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20sp"
        android:background="@drawable/rounded_corner"
        app:cardCornerRadius="10sp"
        app:cardElevation="18sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="30sp">

            <TextView
                android:id="@+id/login_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/king"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/email_address_or_username"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/rounded_corner"
                android:drawableStart="@drawable/outline_account_circle_24"
                android:drawablePadding="10sp"
                android:hint="@string/enter_username_or_email"
                android:inputType="textEmailAddress"
                android:padding="9sp"
                android:textColorHighlight="@color/green_background"
                android:autofillHints="emailAddress" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_marginTop="5sp"
                android:background="@drawable/rounded_corner"
                android:drawableStart="@drawable/baseline_security_24"
                android:drawablePadding="10sp"
                android:hint="@string/enter_password"
                android:inputType="textPassword"
                android:padding="9sp"
                android:textColorHighlight="@color/green_background"
                android:autofillHints="password" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/remember_me"
                    android:layout_width="match_parent"
                    android:layout_height="29sp"
                    android:textColor="@color/grey_1"
                    android:theme="@style/MyCheckBox"
                    android:backgroundTint="@color/green_background"
                    android:text="@string/remember_me"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/forgot_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey_1"
                    android:layout_marginStart="407sp"
                    android:gravity="end"
                    android:text="@string/forgot_password" />
            </LinearLayout>

            <Button
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/green_background"
                android:text="@string/log_in"
                android:textColor="@color/white"
                app:cornerRadius="12sp" />

            <TextView
                android:id="@+id/register_text_reference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:textColor="@color/grey_1"
                android:gravity="center"
                android:text="@string/register" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/google_button"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginEnd="100sp"
            android:text="@string/google"
            android:drawableLeft="@drawable/google"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"

            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/facebook_button"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:text="@string/facebook"
            android:drawableLeft="@drawable/facebook"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/mail_ru_button"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:drawableLeft="@drawable/mail_ru"
            android:layout_marginStart="100sp"
            android:text="@string/mail_ru"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            style="?android:attr/buttonBarButtonStyle" />
    </LinearLayout>

</LinearLayout>