<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_background"
    android:orientation="vertical"
    android:padding="32sp"
    tools:context=".MainActivity">
    
    <androidx.cardview.widget.CardView
        android:layout_width="400sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10sp"
        android:background="@drawable/rounded_corner"
        app:cardCornerRadius="20sp"
        app:cardElevation="10sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="30sp">

            <TextView
                android:id="@+id/login_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/king_card_game"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/email_address"
                android:layout_marginTop="30sp"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:background="@drawable/rounded_corner"
                android:drawableStart="@drawable/outline_account_circle_24"
                android:hint="@string/enter_username_or_email"
                android:padding="13sp"
                android:inputType="textEmailAddress"
                android:drawablePadding="10sp"
                android:textColorHighlight="@color/green_background"
                />

            <EditText
                android:id="@+id/password"
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:inputType="textPassword"
                android:background="@drawable/rounded_corner"
                android:drawableStart="@drawable/baseline_security_24"
                android:hint="@string/enter_password"
                android:padding="13sp"
                android:drawablePadding="10sp"
                android:textColorHighlight="@color/green_background"
                />

            <Button
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_marginTop="10sp"
                android:textColor="@color/white"
                android:text="@string/log_in"
                android:backgroundTint="@color/green_background"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>