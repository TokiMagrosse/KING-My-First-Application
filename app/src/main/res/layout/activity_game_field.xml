<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_background"
    tools:context=".GameFieldActivity">

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.142">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10sp"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/first_bot"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:background="@drawable/default_profile_outlines"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/default_profile_picture" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="3sp"
                android:fontFamily="@font/alata"
                android:text="BOT-P1"
                android:textColor="@color/white" />

        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/center_card_1"
                android:layout_width="85sp"
                android:layout_height="116sp"
                android:contentDescription="@string/todo"
                android:src="@drawable/card_game_placeholder"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/my_card_1" />

            <ImageView
                android:id="@+id/center_card_2"
                android:layout_width="85sp"
                android:layout_height="115sp"
                android:layout_marginStart="20sp"
                android:contentDescription="@string/todo"
                android:src="@drawable/card_game_placeholder"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/my_card_4" />

            <ImageView
                android:id="@+id/center_card_3"
                android:layout_width="85sp"
                android:layout_height="116sp"
                android:layout_marginStart="20sp"
                android:contentDescription="@string/todo"
                android:src="@drawable/card_game_placeholder"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/my_card_8" />

            <ImageView
                android:id="@+id/center_card_4"
                android:layout_width="85sp"
                android:layout_height="116sp"
                android:layout_marginStart="20sp"
                android:contentDescription="@string/todo"
                android:src="@drawable/card_game_placeholder"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/my_card_6" />

        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10sp"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/third_bot"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:background="@drawable/default_profile_outlines"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/default_profile_picture" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="3sp"
                android:fontFamily="@font/alata"
                android:text="BOT-P3"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_door_1"
                android:layout_width="50sp"
                android:layout_height="5sp"
                android:backgroundTint="@color/grey_1"
                android:layout_gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/my_card_1"
            android:layout_width="85sp"
            android:layout_height="116sp"
            android:contentDescription="@string/todo"
            android:src="@drawable/card_monotone_back"
            android:tag="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/my_card_1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_door_2"
                android:layout_width="50sp"
                android:layout_height="5sp"
                android:backgroundTint="@color/grey_1"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:id="@+id/my_card_2"
                android:layout_width="85sp"
                android:layout_height="116sp"
                android:contentDescription="@string/todo"
                android:src="@drawable/card_monotone_back"
                android:tag="2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/my_card_4" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_door_3"
                android:layout_width="50sp"
                android:layout_height="5sp"
                android:backgroundTint="@color/grey_1"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:id="@+id/my_card_3"
                android:layout_width="85sp"
                android:layout_height="116sp"
                android:contentDescription="@string/todo"
                android:src="@drawable/card_monotone_back"
                android:tag="3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/my_card_8" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_door_4"
                android:layout_width="50sp"
                android:layout_height="5sp"
                android:backgroundTint="@color/grey_1"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:id="@+id/my_card_4"
                android:layout_width="85sp"
                android:layout_height="116sp"
                android:contentDescription="@string/todo"
                android:src="@drawable/card_monotone_back"
                android:tag="4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/my_card_6" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_door_5"
                android:layout_width="50sp"
                android:layout_height="5sp"
                android:backgroundTint="@color/grey_1"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:id="@+id/my_card_5"
                android:layout_width="85sp"
                android:layout_height="116sp"
                android:contentDescription="@string/todo"
                android:src="@drawable/card_monotone_back"
                android:tag="5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/my_card_5" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_door_6"
                android:layout_width="50sp"
                android:layout_height="5sp"
                android:backgroundTint="@color/grey_1"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:id="@+id/my_card_6"
                android:layout_width="85sp"
                android:layout_height="116sp"
                android:contentDescription="@string/todo"
                android:src="@drawable/card_monotone_back"
                android:tag="6"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_door_7"
                android:layout_width="50sp"
                android:layout_height="5sp"
                android:backgroundTint="@color/grey_1"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:id="@+id/my_card_7"
                android:layout_width="85sp"
                android:layout_height="116sp"
                android:contentDescription="@string/todo"
                android:src="@drawable/card_monotone_back"
                android:tag="7"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/my_card_3" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_door_8"
                android:layout_width="50sp"
                android:layout_height="5sp"
                android:backgroundTint="@color/grey_1"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:id="@+id/my_card_8"
                android:layout_width="85sp"
                android:layout_height="116sp"
                android:contentDescription="@string/todo"
                android:src="@drawable/card_monotone_back"
                android:tag="8"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/my_card_7" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="65sp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/back_to_profile"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10sp"
            android:backgroundTint="@color/fucking_green"
            android:fontFamily="@font/alata"
            android:text="@string/back"
            android:textStyle="bold"
            app:cornerRadius="10sp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10sp"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/second_bot"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:background="@drawable/default_profile_outlines"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/default_profile_picture" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5sp"
                android:fontFamily="@font/alata"
                android:text="BOT-P2"
                android:textColor="@color/white" />

        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/table_button"
            android:layout_width="45sp"
            android:layout_height="50sp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="15sp"
            android:backgroundTint="@color/grey"
            android:drawableEnd="@drawable/table_small"
            android:drawablePadding="15dp"
            android:padding="7.5dp"
            app:cornerRadius="10dp" />

        <Button
            android:id="@+id/menu_button"
            android:layout_width="45sp"
            android:layout_height="50sp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10sp"
            android:backgroundTint="@color/grey"
            android:drawableEnd="@drawable/menu"
            android:drawablePadding="15dp"
            android:padding="7dp"
            app:cornerRadius="10dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>