<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="395sp"
    android:layout_height="300sp"
    app:cardElevation="15sp"
    android:layout_gravity="center"
    android:backgroundTint="#588157"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="7.5sp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/alata"
            android:text="Classic Game Rules"
            android:textColor="@color/grey"
            android:textSize="27.5sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="340sp"
            android:layout_height="200sp"
            android:fontFamily="@font/alata"
            android:text="@string/quick_game_description"
            android:textColor="@color/grey"
            android:textSize="17.5sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/classic_game_close_button"
            android:layout_width="125sp"
            android:layout_height="37.5sp"
            android:layout_gravity="center_vertical"
            android:backgroundTint="@color/grey"
            android:padding="3.5sp"
            android:text="Close"
            android:layout_marginBottom="2.5sp"
            android:fontFamily="@font/alata"
            android:textColor="@color/grey_1"
            app:cornerRadius="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.984" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>