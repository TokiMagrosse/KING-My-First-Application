<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_grey"
    tools:context=".inside_of_king.GameRulesActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <androidx.cardview.widget.CardView
            android:backgroundTint="@color/grey_1"
            android:layout_width="600sp"
            android:layout_height="275sp"
            app:cardCornerRadius="15sp">

            <ScrollView
                android:layout_marginTop="10sp"
                android:layout_gravity="center_horizontal"
                android:layout_width="550sp"
                android:layout_height="250sp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/intro"
                        android:textStyle="bold"
                        android:textSize="27.5sp"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/alata"
                        android:textColor="@color/white"
                        android:text="@string/intro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/intro_in_rules"
                        android:layout_marginTop="2.5sp"
                        android:textSize="16.75sp"
                        android:fontFamily="@font/alata"
                        android:textColor="@color/grey"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/intro_in_game_rules"/>

                    <TextView
                        android:id="@+id/quick_game"
                        android:textStyle="bold"
                        android:layout_marginTop="15sp"
                        android:textSize="27.5sp"
                        android:fontFamily="@font/alata"
                        android:textColor="@color/white"
                        android:layout_gravity="center_horizontal"
                        android:text="About Quick Game"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/quick_game_in_rules"
                        android:layout_marginTop="2.5sp"
                        android:textSize="16.75sp"
                        android:fontFamily="@font/alata"
                        android:textColor="@color/grey"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/quick_game_in_rules"/>
                    
                    <LinearLayout
                        android:layout_marginTop="15sp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        
                        <ImageView
                            android:src="@drawable/king_of_diamonds"
                            android:layout_width="55sp"
                            android:layout_height="75sp"/>
                        <ImageView
                            android:layout_marginStart="5sp"
                            android:src="@drawable/nine_of_diamonds"
                            android:layout_width="55sp"
                            android:layout_height="75sp"/>
                        <ImageView
                            android:layout_marginStart="5sp"
                            android:src="@drawable/ten_of_spades"
                            android:layout_width="55sp"
                            android:layout_height="75sp"/>
                        <ImageView
                            android:layout_marginStart="5sp"
                            android:src="@drawable/queen_of_diamonds"
                            android:layout_width="55sp"
                            android:layout_height="75sp"/>

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/case_1"
                            android:textSize="16sp"
                            android:fontFamily="@font/alata"
                            android:textColor="@color/grey"
                            android:layout_gravity="center_vertical"
                            android:text="@string/case_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10sp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/seven_of_clubs"
                            android:layout_width="55sp"
                            android:layout_height="75sp"/>
                        <ImageView
                            android:layout_marginStart="5sp"
                            android:src="@drawable/jack_of_clubs"
                            android:layout_width="55sp"
                            android:layout_height="75sp"/>
                        <ImageView
                            android:layout_marginStart="5sp"
                            android:src="@drawable/ace_of_clubs"
                            android:layout_width="55sp"
                            android:layout_height="75sp"/>
                        <ImageView
                            android:layout_marginStart="5sp"
                            android:src="@drawable/queen_of_hearts"
                            android:layout_width="55sp"
                            android:layout_height="75sp"/>

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/case_2"
                            android:textSize="16sp"
                            android:fontFamily="@font/alata"
                            android:textColor="@color/grey"
                            android:layout_gravity="center_vertical"
                            android:text="@string/case_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/points_in_rules"
                        android:textSize="16.75sp"
                        android:fontFamily="@font/alata"
                        android:textColor="@color/grey"
                        android:layout_marginTop="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/points_in_rules"/>

                    <TextView
                        android:textStyle="bold"
                        android:layout_marginTop="15sp"
                        android:textSize="27.5sp"
                        android:fontFamily="@font/alata"
                        android:textColor="@color/white"
                        android:layout_gravity="center_horizontal"
                        android:text="Coins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/coins_in_rules"
                        android:layout_marginTop="2.5sp"
                        android:textSize="16.75sp"
                        android:fontFamily="@font/alata"
                        android:textColor="@color/grey"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/coins_in_rules"/>

                    <TextView
                        android:id="@+id/rating_system"
                        android:textStyle="bold"
                        android:layout_marginTop="15sp"
                        android:textSize="27.5sp"
                        android:fontFamily="@font/alata"
                        android:textColor="@color/white"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/rating_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/rating_system_in_rules"
                        android:layout_marginTop="2.5sp"
                        android:textSize="16.75sp"
                        android:fontFamily="@font/alata"
                        android:textColor="@color/grey"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/rating_system_in_rules"/>

                    <TextView
                        android:id="@+id/less_than_250"
                        android:textSize="16.75sp"
                        android:fontFamily="@font/alata"
                        android:textColor="@color/grey"
                        android:layout_marginTop="7.5sp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="less than 250 – Newbie"/>
                    <TextView
                        android:textSize="16.75sp"
                        android:layout_marginTop="2.5sp"
                        android:fontFamily="@font/alata"
                        android:textColor="@color/grey"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="[250; 350) – Beginner"/>
                    <TextView
                        android:layout_marginTop="2.5sp"
                        android:textSize="16.75sp"
                        android:fontFamily="@font/alata"
                        android:textColor="@color/grey"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="[350; 450) – Trainee"/>
                    <TextView
                        android:layout_marginTop="2.5sp"
                        android:textSize="16.75sp"
                        android:fontFamily="@font/alata"
                        android:textColor="@color/grey"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="[450; 550) – Student"/>
                    <TextView
                        android:layout_marginTop="2.5sp"
                        android:textSize="16.75sp"
                        android:fontFamily="@font/alata"
                        android:textColor="@color/grey"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="[550; 700) – Expert"/>
                    <TextView
                        android:layout_marginTop="2.5sp"
                        android:textSize="16.75sp"
                        android:fontFamily="@font/alata"
                        android:textColor="@color/grey"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="[700; 850) – Master"/>
                    <TextView
                        android:layout_marginTop="2.5sp"
                        android:textSize="16.75sp"
                        android:fontFamily="@font/alata"
                        android:textColor="@color/grey"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="[850; 1000) – Veteran"/>
                    <TextView
                        android:layout_marginTop="2.5sp"
                        android:textSize="16.75sp"
                        android:fontFamily="@font/alata"
                        android:textColor="@color/grey"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="[1000; 1200) – Captain"/>
                    <TextView
                        android:layout_marginTop="2.5sp"
                        android:textSize="16.75sp"
                        android:fontFamily="@font/alata"
                        android:textColor="@color/grey"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="[1200; 1500) – Lord"/>
                    <TextView
                        android:id="@+id/greater_than_1500"
                        android:layout_marginTop="2.5sp"
                        android:textSize="16.75sp"
                        android:fontFamily="@font/alata"
                        android:textColor="@color/grey"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/greater_then_1500"/>

                    <TextView
                        android:id="@+id/rating_scheme_in_rules"
                        android:textSize="16.75sp"
                        android:fontFamily="@font/alata"
                        android:textColor="@color/grey"
                        android:layout_marginTop="7.5sp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/rating_calculation_in_rules"/>

                    <TextView
                        android:id="@+id/x_points"
                        android:layout_marginTop="2.5sp"
                        android:textSize="16.75sp"
                        android:fontFamily="@font/alata"
                        android:textColor="@color/grey"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="User – x points"/>
                    <TextView
                        android:id="@+id/a_points"
                        android:textSize="16.75sp"
                        android:fontFamily="@font/alata"
                        android:textColor="@color/grey"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="First bot – a points"/>
                    <TextView
                        android:id="@+id/b_points"
                        android:textSize="16.75sp"
                        android:fontFamily="@font/alata"
                        android:textColor="@color/grey"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Second bot – b points"/>
                    <TextView
                        android:id="@+id/c_points"
                        android:textSize="16.75sp"
                        android:fontFamily="@font/alata"
                        android:textColor="@color/grey"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Third bot – c points"/>

                    <TextView
                        android:id="@+id/step_1"
                        android:layout_marginTop="5sp"
                        android:textSize="16.75sp"
                        android:fontFamily="@font/alata"
                        android:textColor="@color/grey"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Step 1. The average of points gained by 3 bots shall be calculated as:"/>

                    <TextView
                        android:id="@+id/bap"
                        android:textSize="16.75sp"
                        android:fontFamily="@font/alata"
                        android:textColor="@color/grey"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="(a + b + c) / 3 = BAP (Bots Average Point)"/>

                    <TextView
                        android:id="@+id/step_2"
                        android:layout_marginTop="10sp"
                        android:textSize="16.75sp"
                        android:fontFamily="@font/alata"
                        android:textColor="@color/grey"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Step 2. The average of the average points gained by a user and bots shall be calculated as:"/>

                    <TextView
                        android:id="@+id/result"
                        android:textSize="16.75sp"
                        android:fontFamily="@font/alata"
                        android:textColor="@color/grey"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="(x + BAP) / 2 = R (Result)"/>

                    <TextView
                        android:id="@+id/the_last_one"
                        android:layout_marginTop="10sp"
                        android:textSize="16.75sp"
                        android:fontFamily="@font/alata"
                        android:textColor="@color/grey"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="The obtained R number shall be added to the current rating of a user (R may also be as positive, as well as negative, as well as 0)."/>
                </LinearLayout>
            </ScrollView>

        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <Button
                android:visibility="gone"
                android:id="@+id/language"
                android:fontFamily="@font/alata"
                android:text="LANGUAGE"
                android:textStyle="bold"
                android:backgroundTint="@color/grey_1"
                android:layout_width="250sp"
                android:layout_height="55sp"
                app:cornerRadius="15sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="55sp">

                <Button
                    android:id="@+id/rus"
                    android:fontFamily="@font/alata"
                    android:text="РУС"
                    android:textSize="11.75sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/grey_1"
                    android:layout_width="75sp"
                    android:layout_height="match_parent"
                    app:cornerRadius="10sp" />

                <Button
                    android:id="@+id/arm"
                    android:fontFamily="@font/alata"
                    android:text="ՀԱՅ"
                    android:textSize="11.75sp"
                    android:layout_marginStart="10sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/grey_1"
                    android:layout_width="75sp"
                    android:layout_height="match_parent"
                    app:cornerRadius="10sp" />

                <Button
                    android:textSize="11.75sp"
                    android:id="@+id/eng"
                    android:fontFamily="@font/alata"
                    android:text="ENG"
                    android:layout_marginStart="10sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/grey_1"
                    android:layout_width="75sp"
                    android:layout_height="match_parent"
                    app:cornerRadius="10sp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/back_to_main"
                    android:fontFamily="@font/alata"
                    android:text="BACK TO MAIN"
                    android:textStyle="bold"
                    android:backgroundTint="@color/grey_1"
                    android:layout_width="200sp"
                    android:layout_height="match_parent"
                    app:cornerRadius="15sp" />
            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
