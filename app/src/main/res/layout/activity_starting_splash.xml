<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/affecting_red"
    tools:context=".outside_of_king.StartingSplashActivity">

    <LinearLayout
        android:id="@+id/llSplashContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.367">

        <ImageView
            android:id="@+id/poisonous_king"
            android:layout_width="225sp"
            android:layout_height="200sp"
            android:layout_gravity="center"
            android:contentDescription="@string/todo"
            android:src="@drawable/king_affecting_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/poisonous_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/alata"
            android:textSize="45sp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
