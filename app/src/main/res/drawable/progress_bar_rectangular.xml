<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background rectangle -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="2sp" android:color="#CCCCCC"/>
            <solid android:color="@color/white" /> <!-- Background color -->
            <corners android:radius="10dp" /> <!-- Rounded corners, adjust radius as needed -->
        </shape>
    </item>
    <!-- Progress bar rectangle -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="@color/black_overlay" /> <!-- Progress color -->
                <corners android:radius="10dp" /> <!-- Rounded corners, adjust radius as needed -->
            </shape>
        </clip>
    </item>
</layer-list>
