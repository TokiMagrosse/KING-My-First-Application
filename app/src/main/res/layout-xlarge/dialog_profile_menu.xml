<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="650sp"
    android:layout_height="450sp"
    android:layout_gravity="center"
    android:backgroundTint="@color/grey_1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15sp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/alata"
            android:text="@string/settings"
            android:textColor="@color/white"
            android:textSize="45sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/close_button"
            android:layout_width="46sp"
            android:layout_height="50sp"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/grey_1"
            android:drawableEnd="@drawable/close_icon"
            android:drawablePadding="0dp"
            android:padding="5.4dp"
            app:cornerRadius="5sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.918"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="577.5sp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="7sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.422"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.304">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="65sp"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/grey_2"
                android:orientation="horizontal"
                app:cardCornerRadius="7.5sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="22.5sp"
                    android:layout_marginBottom="1sp"
                    android:fontFamily="@font/alata"
                    android:text="@string/sound"
                    android:textColor="@color/black"
                    android:textSize="22.5sp" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/sound_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="512.5sp"
                    android:checked="true"
                    android:layout_gravity="center_vertical"
                    android:thumbTint="@color/green_background"
                    android:trackTint="@color/grey"
                    android:padding="5sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="65sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12.5sp"
                android:backgroundTint="@color/grey_2"
                android:orientation="horizontal"
                app:cardCornerRadius="7.5sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="22.5sp"
                    android:layout_marginBottom="1sp"
                    android:fontFamily="@font/alata"
                    android:text="@string/music"
                    android:textColor="@color/black"
                    android:textSize="22.5sp" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/music_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="512.5sp"
                    android:checked="true"
                    android:layout_gravity="center_vertical"
                    android:thumbTint="@color/green_background"
                    android:trackTint="@color/grey"
                    android:padding="5sp" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/game_rules_button"
                    android:layout_width="125sp"
                    android:layout_height="57.5sp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/grey_2"
                    android:fontFamily="@font/alata"
                    android:padding="5sp"
                    android:text="@string/game_rules"
                    android:textColor="@color/black"
                    android:textColorLink="@color/grey_1"
                    android:textSize="20sp"
                    app:cornerRadius="7.5sp" />

                <Space
                    android:layout_width="92.5sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/logout"
                    android:layout_width="175sp"
                    android:layout_height="57.5sp"
                    android:backgroundTint="@color/grey_2"
                    android:fontFamily="@font/alata"
                    android:padding="5sp"
                    android:text="@string/log_out_2"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:cornerRadius="7.5sp" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="6sp"
                android:layout_marginTop="5sp"
                android:backgroundTint="@color/blue_grey"
                app:cardCornerRadius="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7.5sp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/change_color_button"
                    android:layout_width="125sp"
                    android:layout_height="57.5sp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/grey_2"
                    android:fontFamily="@font/alata"
                    android:padding="5sp"
                    android:text="Language"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:cornerRadius="7.5sp" />

                <Space
                    android:layout_width="110sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/delete_account_button"
                    android:layout_width="175sp"
                    android:layout_height="57.5sp"
                    android:backgroundTint="@color/red_3"
                    android:fontFamily="@font/alata"
                    android:padding="5sp"
                    android:text="@string/delete_account"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:cornerRadius="7.5sp" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="6sp"
                android:layout_marginTop="7.5sp"
                android:backgroundTint="@color/blue_grey"
                app:cardCornerRadius="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7.5sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/privacy_policy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alata"
                    android:text="@string/privacy_policy"
                    android:textColor="@color/white"
                    android:textSize="19sp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/terms_and_conditions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alata"
                    android:gravity="center_horizontal"
                    android:text="@string/terms_and_conditions"
                    android:textColor="@color/white"
                    android:textSize="19sp" />
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>