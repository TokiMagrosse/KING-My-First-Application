<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/green_background"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="1100sp"
        android:layout_height="600sp"
        android:layout_gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.348">

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="75sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/rounded_corner"
            android:drawableStart="@drawable/baseline_account_circle_24"
            android:drawablePadding="12sp"
            android:textSize="25sp"
            android:fontFamily="@font/alata"
            android:hint="@string/your_nickname"
            android:inputType="textPersonName"
            android:padding="20sp"
            android:autofillHints="username" />

        <EditText
            android:id="@+id/email_address"
            android:layout_width="match_parent"
            android:layout_height="75sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/rounded_corner"
            android:drawableStart="@drawable/email_icon"
            android:drawablePadding="12sp"
            android:textSize="25sp"
            android:fontFamily="@font/alata"
            android:hint="@string/enter_your_email"
            android:inputType="textEmailAddress"
            android:padding="20sp"
            android:autofillHints="emailAddress" />

        <EditText
            android:id="@+id/register_password"
            android:layout_width="match_parent"
            android:layout_height="75sp"
            android:layout_marginTop="7.5sp"
            android:background="@drawable/rounded_corner"
            android:drawableStart="@drawable/password_lock_icon"
            android:drawablePadding="12sp"
            android:textSize="25sp"
            android:fontFamily="@font/alata"
            android:hint="@string/enter_a_strong_password"
            android:inputType="textPassword"
            android:padding="20sp"
            android:autofillHints="password" />

        <EditText
            android:id="@+id/confirm_password"
            android:layout_width="match_parent"
            android:layout_height="75sp"
            android:layout_marginTop="7.5sp"
            android:background="@drawable/rounded_corner"
            android:drawableStart="@drawable/security_icon"
            android:drawablePadding="12sp"
            android:fontFamily="@font/alata"
            android:textSize="25sp"
            android:hint="@string/confirm_password"
            android:inputType="textPassword"
            android:padding="20sp"
            android:autofillHints="password" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <Button
            android:id="@+id/register_button"
            android:layout_width="match_parent"
            android:layout_height="73sp"
            android:layout_marginTop="20sp"
            android:backgroundTint="@color/super_dark_green"
            android:fontFamily="@font/alata"
            android:textSize="23sp"
            android:textStyle="bold"
            android:text="@string/register_button"
            android:textColor="@color/white"
            app:cornerRadius="20sp" />

        <TextView
            android:id="@+id/back_to_login_activity"
            android:layout_width="350sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/alata"
            android:gravity="center"
            android:text="@string/already_have_an_account"
            android:textColor="@color/white"
            android:textSize="23sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>