<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_background"
    android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="1250sp"
        android:layout_height="715sp"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        app:cardCornerRadius="10dp"
        app:cardElevation="23dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.493">

        <TextView
            android:id="@+id/king_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21sp"
            android:fontFamily="@font/alata"
            android:text="@string/king"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="80sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="1050sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="10sp">

            <EditText
                android:id="@+id/email_address_or_username"
                android:layout_width="match_parent"
                android:layout_height="85sp"
                android:layout_marginTop="160sp"
                android:background="@drawable/rounded_corner"
                android:drawableStart="@drawable/outline_account_circle_24"
                android:drawablePadding="10sp"
                android:fontFamily="@font/alata"
                android:hint="@string/enter_username_or_email"
                android:inputType="textEmailAddress"
                android:padding="12sp"
                android:textSize="32sp"
                android:autofillHints="emailAddress" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="85sp"
                android:layout_marginTop="20sp"
                android:fontFamily="@font/alata"
                android:background="@drawable/rounded_corner"
                android:drawableStart="@drawable/baseline_security_24"
                android:drawablePadding="10sp"
                android:hint="@string/enter_password"
                android:inputType="textPassword"
                android:padding="12sp"
                android:textSize="32sp"
                android:autofillHints="password" />

            <TextView
                android:id="@+id/forgot_password"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textSize="32sp"
                android:layout_marginTop="27sp"
                android:layout_marginStart="730sp"
                android:fontFamily="@font/alata"
                android:text="@string/forgot_password"
                android:textColor="@color/grey_1" />

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <Button
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:textStyle="bold"
                android:layout_marginTop="30sp"
                android:backgroundTint="@color/super_dark_green"
                android:text="@string/log_in"
                android:textSize="25sp"
                android:fontFamily="@font/alata"
                android:textColor="@color/white"
                app:cornerRadius="12sp" />

        </LinearLayout>

        <CheckBox
            android:id="@+id/remember_me"
            android:layout_width="250sp"
            android:layout_height="73sp"
            android:textColor="@color/grey_1"
            android:fontFamily="@font/alata"
            android:gravity="center_vertical"
            android:scaleX="1.7"
            android:scaleY="1.7"
            android:theme="@style/colored_checkbox."
            android:text="@string/remember_me"
            android:layout_marginStart="200sp"
            android:layout_marginTop="378sp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/register_text_reference"
            android:layout_width="750sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="600sp"
            android:gravity="center"
            android:textSize="32sp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/alata"
            android:text="@string/register"
            android:textColor="@color/grey_1" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>