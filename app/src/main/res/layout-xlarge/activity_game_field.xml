<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/very_dark_green"
    tools:context=".GameFieldActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="125sp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:layout_width="85sp"
            android:layout_height="116sp"
            android:src="@drawable/king_of_clubs" />

        <ImageView
            android:layout_width="85sp"
            android:layout_height="116sp"
            android:src="@drawable/ace_of_clubs" />

        <ImageView
            android:layout_width="85sp"
            android:layout_height="116sp"
            android:src="@drawable/queen_of_diamonds" />

        <ImageView
            android:layout_width="85sp"
            android:layout_height="116sp"
            android:src="@drawable/seven_of_hearts" />

        <ImageView
            android:layout_width="85sp"
            android:layout_height="116sp"
            android:src="@drawable/ace_of_hearts" />

        <ImageView
            android:layout_width="85sp"
            android:layout_height="116sp"
            android:src="@drawable/nine_of_spades" />

        <ImageView
            android:layout_width="85sp"
            android:layout_height="116sp"
            android:src="@drawable/ten_of_clubs" />

        <ImageView
            android:layout_width="85sp"
            android:layout_height="116sp"
            android:src="@drawable/jack_of_spades" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>